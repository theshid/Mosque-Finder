<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_item_id"
        style="@style/TextAppearance.AppCompat.Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:minWidth="50dp"
        tools:text="100"
        android:fontFamily="@font/roboto_medium_numbers"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_dua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_id" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_item_id"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_item_arab"
            style="@style/TextAppearance.AppCompat.Item.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kemenag"
            tools:text="بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِيْم"/>

        <!--<TextView
            android:id="@+id/tv_item_ayah_latin"
            style="@style/TextAppearance.AppCompat.Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_regular"
            tools:text="bismillāhir-raḥmānir-raḥīm"
            android:textColor="@color/colorPrimary" />-->

        <TextView
            android:id="@+id/tv_item_translate"
            style="@style/TextAppearance.AppCompat.Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/quicksand_regular"
            tools:text="Dengan nama Allah Yang Maha Pengasih, Maha Penyayang."/>

        <View
            android:id="@+id/line_below_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimary"
             />

        <TextView
            android:id="@+id/tv_item_translate_french"
            style="@style/TextAppearance.AppCompat.Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/quicksand_regular"
            tools:text="Dengan nama Allah Yang Maha Pengasih, Maha Penyayang."/>

        <View
            android:id="@+id/line_below_title2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/tv_item_source"
            style="@style/TextAppearance.AppCompat.Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/people"
            tools:text="Dengan nama Allah Yang Maha Pengasih, Maha Penyayang."/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/kemenag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>