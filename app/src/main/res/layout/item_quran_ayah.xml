<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey1"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_item_ayah_verse"
        style="@style/TextAppearance.AppCompat.Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:minWidth="50dp"
        tools:text="100"
        android:fontFamily="@font/quicksand_semibold"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_item_ayah_verse"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_item_ayah_arab"
            style="@style/TextAppearance.AppCompat.Item.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kemenag"
            tools:text="بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِيْم"/>

        <TextView
            android:id="@+id/tv_item_ayah_latin"
            style="@style/TextAppearance.AppCompat.Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_regular"
            tools:text="bismillāhir-raḥmānir-raḥīm"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_item_ayah_translate"
            style="@style/TextAppearance.AppCompat.Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/quicksand_regular"
            tools:text="Dengan nama Allah Yang Maha Pengasih, Maha Penyayang."/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>