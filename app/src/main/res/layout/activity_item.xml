<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Main.View.ItemActivity">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/rv_azkhar"
        app:layout_constraintStart_toStartOf="@+id/rv_azkhar"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/chapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/TextAppearance.AppCompat.Item.White"
            android:fontFamily="@font/quicksand_semibold"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="Al-Fatiha" />





    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_azkhar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_title"
        tools:itemCount="20"
        tools:listitem="@layout/item_azkhar" />

</androidx.constraintlayout.widget.ConstraintLayout>